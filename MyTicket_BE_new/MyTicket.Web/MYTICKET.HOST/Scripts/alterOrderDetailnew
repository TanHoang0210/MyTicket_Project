BEGIN TRANSACTION;
GO

EXEC sp_rename N'[dbo].[OrderDetail].[isTransfer]', N'IsTransfer', N'COLUMN';
GO

EXEC sp_rename N'[dbo].[OrderDetail].[isExchange]', N'IsExchange', N'COLUMN';
GO

DECLARE @var0 sysname;
SELECT @var0 = [d].[name]
FROM [sys].[default_constraints] [d]
INNER JOIN [sys].[columns] [c] ON [d].[parent_column_id] = [c].[column_id] AND [d].[parent_object_id] = [c].[object_id]
WHERE ([d].[parent_object_id] = OBJECT_ID(N'[dbo].[Ticket]') AND [c].[name] = N'CustomerId');
IF @var0 IS NOT NULL EXEC(N'ALTER TABLE [dbo].[Ticket] DROP CONSTRAINT [' + @var0 + '];');
ALTER TABLE [dbo].[Ticket] ALTER COLUMN [CustomerId] int NULL;
GO

ALTER TABLE [dbo].[OrderDetail] ADD [TicketEventId] int NOT NULL DEFAULT 0;
GO

ALTER TABLE [dbo].[OrderDetail] ADD [TransferStatus] int NULL;
GO

ALTER TABLE [dbo].[Order] ADD [Total] decimal(18,2) NOT NULL DEFAULT 0.0;
GO

CREATE UNIQUE INDEX [IX_OrderDetail_TicketEventId] ON [dbo].[OrderDetail] ([TicketEventId]);
GO

CREATE UNIQUE INDEX [IX_OrderDetail_TicketId] ON [dbo].[OrderDetail] ([TicketId]);
GO

ALTER TABLE [dbo].[OrderDetail] ADD CONSTRAINT [FK_OrderDetail_TicketEvent_TicketEventId] FOREIGN KEY ([TicketEventId]) REFERENCES [dbo].[TicketEvent] ([Id]) ON DELETE CASCADE;
GO

ALTER TABLE [dbo].[OrderDetail] ADD CONSTRAINT [FK_OrderDetail_Ticket_TicketId] FOREIGN KEY ([TicketId]) REFERENCES [dbo].[Ticket] ([Id]) ON DELETE CASCADE;
GO

INSERT INTO [__EFMigrationsHistory] ([MigrationId], [ProductVersion])
VALUES (N'20231120162002_AlterEntityOrderDetail3', N'7.0.13');
